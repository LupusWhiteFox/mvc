@page
@model UpsertModel


@Html.ValidationSummary(true)

<br />
<h2 class="text-info">@(Model.Books.id!=0? "Edit": "Create") Book</h2>
<br />

<div class="border container" style="padding:30px;">
  <form method="POST">
    @if (Model.Books.id != 0)
    {
      <input type="hidden" asp-for="Books.id" />
    }
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
      <div class="col-4">
        <label asp-for="Books.Name"></label>
      </div>
      <div class="col-6">
        <input asp-for="Books.Name" class="form-control" />
      </div>
      <span asp-validation-for="Books.Name" class="text-danger"></span>
    </div>

    <div class="form-group row">
      <div class="col-4">
        <label asp-for="Books.Author"></label>
      </div>
      <div class="col-6">
        <input asp-for="Books.Author" class="form-control" />
      </div>
    </div>

    <div class="form-group row">
      <div class="col-4">
        <label asp-for="Books.ISBN"></label>
      </div>
      <div class="col-6">
        <input asp-for="Books.ISBN" class="form-control" />
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3 offset-4">
        <button type="submit" class="btn btn-primary form-control">@(Model.Books.id!=0? "Update": "Create")</button>
      </div>
      <div class="col-3">
        <a asp-page="Index" class="btn btn-success form-control">Back to list</a>
      </div>
    </div>
  </form>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}
